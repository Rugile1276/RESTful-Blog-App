<% include ./partials/header.ejs %>

<div class="ui main text segment container">
	<div class="ui huge header">Edit Blog</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST" >
		<div class="field">
			<input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="title">
		</div>
		<div class="field">
			<input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="image">
		</div>
		<div class="field">
			<textarea type="text" name="blog[body]" placeholder="body"><%= blog.body %></textarea>
		</div>
		<button class="ui primary button" type="submit">Save</button>
	</form>
</div>

<% include ./partials/footer.ejs %>